rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función helper para verificar autenticación y propiedad
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Reglas para la colección artifacts (que es la que usa la app)
    // El wildcard {appId} permite cualquier ID de aplicación (como 'momentum-fitness-ai')
    match /artifacts/{appId}/users/{userId}/{documents=**} {
       allow read, write: if isOwner(userId);
    }
    
    // Reglas para la colección users (por si se migra en el futuro)
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
  }
}
